= render "products/header"
.mainContainer
  .mainContainer__panel
    .mainContainer__panel__noAccount
      %pアカウントをお持ちでない方はこちら
      - if devise_mapping.registerable? && controller_name != 'registrations'
        = link_to "新規登録", new_registration_path(resource_name)
    = form_for(resource, as: resource_name, class: "loginForm", url: session_path(resource_name)) do |f|
      .loginForm-inner
        .loginForm-inner__box
          = f.email_field :email, autofocus: true, autocomplete: "email", class: "loginForm-text inputDefault", placeholder: 'メールアドレス'
        .loginForm-inner__box
          = f.password_field :password, autocomplete: "current-password", class: "loginForm-text inputDefault", placeholder: 'パスワード'
        .loginForm-inner__box
          = f.submit "ログイン", class: "loginBtn btnDefault"
        .loginForm-inner__box
          - if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations'
            = link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "forgetPassword"
= render "products/footer"
